<h1>Listing rides</h1>

<table>
  <thead>
  <tr>
    <th>Bike</th>
    <th>Route</th>
    <th>Ride date</th>
    <th>Distance</th>
    <th>Speed</th>
    <th colspan="3"></th>
  </tr>
  </thead>

  <tbody>
  <% @rides.each do |ride| %>
      <tr>
        <td><%= ride.bike %></td>
        <td><%= ride.route %></td>
        <td><%= ride.ride_date %></td>
        <td><%= ride.distance %></td>
        <td><%= ride.speed %></td>
        <td><%= link_to 'Show', ride %></td>
        <td><%= link_to 'Edit', edit_ride_path(ride) %></td>
        <td><%= link_to 'Destroy', ride, method: :delete, data: {confirm: 'Are you sure?'} %></td>
      </tr>
  <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Ride', new_ride_path %>
